{
  "name": "galactic-commander",
  "version": "0.0.1",
  "private": true,
  "description": "Galactic Commanders: Explore & Conquer game monorepo",
  "main": "index.js",
  "author": "Daniel Somoza <dasomoza@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "start": "yarn workspaces run start",
    "test": "yarn workspaces run test",
    "test:coverage": "yarn workspaces run test:coverage",
    "prereport": "yarn test:coverage && nyc merge packages/auth-microservice/coverage temp/coverage-auth.json && nyc merge packages/game-engine/coverage temp/coverage-game-engine.json",
    "report": "nyc report --temp-directory temp",
    "lint:check": "eslint ./packages/**/*.ts && prettier --check packages/**/*.ts"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@types/jest": "^29.5.11",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.9.4",
    "typescript": "^5.3.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "mongodb-memory-server": "^9.1.1",
    "nyc": "^15.1.0"
  },
  "nyc": {
    "report-dir": "./coverage",
    "include": [
      "packages/**"
    ],
    "exclude": [
      "**/*.test.ts"
    ],
    "reporter": [
      "lcov"
    ]
  }
}
